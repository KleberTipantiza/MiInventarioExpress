<h2>Lista de Productos</h2>

<a href="/productos/nuevo">Agregar Producto</a>

<table border="1">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Descripcion</th>
            <th>Imagen</th>
        </tr>
    </thead>
    <tbody>
        {{#each productos}}
        <tr>
            <td>{{this.nombre}}</td>
            <td>{{this.precio}}</td>
            <td>{{this.descripcion}}</td>
            <td><img src="{{this.imagen}}" alt="{{this.nombre}}" width="100"></td>
            <td>
                <a href="/productos/editar/{{this.id}}">Editar</a>
                <form action="/productos/eliminar/{{this.id}}" method="POST" style="display:inline;">
                    <button type="submit">Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>